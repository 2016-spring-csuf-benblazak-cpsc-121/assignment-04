void selection_sort(int array[], int n)
{
    int min_value = 0, temp_value =0;
    
    for(int i =0; i < n-1; i++)
    {
        min_value = i;
        
        for(int j = i+1; j < n; j++)
        {
            if(array[j] < array[min_value])
                min_value = j;
        }        
            
        if(min_value != i)
        {
            temp_value = array[i];
            array[i] = array[min_value];
            array[min_value] = temp_value;
        }
    }
}
